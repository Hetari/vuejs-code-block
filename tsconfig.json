{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.ts",
    "types/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components/generate-prism-languages",
    "src/components/generate-icons"
  ]
}
