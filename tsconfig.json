{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.ts",
    "types/**/*.tsx",
    "types/**/*.vue"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
